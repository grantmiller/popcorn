<!DOCTYPE html>
<html>
    <head>
        <title>Login - Popcorn Log Analysis</title>
        {{#head_includes}}
          {{tag}}
        {{/head_includes}}
        <script src="/js/jquery.min.js"></script>
        <script src="/js/login.js" type="text/javascript"></script>
    </head>
    <body class="imaged-background">
        <div class="pri-nav-bg">
            <div class="pri-nav">
                <a href="/"><div class="sm-logo"></div></a>
			</div>
		</div>
    	<div class="container" style="margin-top: 130px;">
            <div style="clear: both">

			</div>
			<div class="main-container">	
        <div class="popover fade right in" style="position:fixed; top: 255px; left: 670px; display: block;">
          <div class="arrow"></div>
          <h3 class="popover-title">Login</h3>
          <div class="popover-content">
            <div class="control-group">
							<!-- Username -->
							<label class="control-label"  for="username">Username</label>
							<div class="controls">
								<input type="text" id="username" name="username" placeholder="" class="input-medium" autofocus>
							</div>
						</div>

						<div class="control-group">
							<!-- Password-->
							<label class="control-label" for="password">Password</label>
							<div class="controls">
								<input type="password" id="password" name="password" placeholder="" class="input-medium">
							</div>
						</div>


						<div class="control-group">
							<!-- Button -->
							<div class="controls">
                <input type="button" class="btn btn-success" id="login-btn" value="Login"></input>
							</div>
						</div>
          </div>
        </div>
				</form>
			</div>
		</div>
	</body>
</html>
